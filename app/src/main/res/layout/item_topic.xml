<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_button_topic"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp"
    android:layout_height="120dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivTopic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_school"
        app:shapeAppearance="@style/roundedImageTopic"
        app:strokeColor="@color/colorYellow"
        app:strokeWidth="1dp"
        tools:ignore="ImageContrastCheck" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvEnTopic"
            android:layout_width="match_parent"
            android:text="@string/txt_school"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvVnTopic"
            android:layout_width="match_parent"
            android:text="@string/txt_school_trans"
            android:fontFamily="@font/quicksand_medium"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivFunny"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:ignore="ContentDescription" />

</LinearLayout>