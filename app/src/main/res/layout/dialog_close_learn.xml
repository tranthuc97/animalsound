<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackAlpha"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginVertical="600dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_white_shadow"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="@string/txt_do_you_want_close"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingHorizontal="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_cry"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/btYes"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorRed"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/txt_yes"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="VisualLintButtonSize" />

            <Button
                android:id="@+id/btNo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/colorGreen"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/txt_no"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck,VisualLintButtonSize" />
        </TableRow>
    </LinearLayout>

</FrameLayout>