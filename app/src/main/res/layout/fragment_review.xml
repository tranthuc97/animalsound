<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnReviewFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp"
        android:background="@drawable/bg_white_shadow"
        android:layout_marginTop="30dp"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_notebook"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/tvNoteBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/txt_notebook_have"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:gravity="bottom">

        <LinearLayout
            android:id="@+id/lnColumn1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_250"
            android:layout_marginStart="58dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvColumn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="@string/txt_count_word1"
                android:textColor="@color/colorRed" />

            <View
                android:id="@+id/vColumn1"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_column_1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnColumn2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_200"
            android:layout_marginStart="55dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvColumn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:text="@string/txt_count_word1"
                android:textColor="@color/colorGreen" />

            <View
                android:id="@+id/vColumn2"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_column_2" />
        </LinearLayout>


    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@color/black" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/text_new_word"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/txt_old_word"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/txt_level"
            android:textColor="@color/colorBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
    </TableRow>

    <TextView
        android:id="@+id/tvReviewNow"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_button_green"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="@string/txt_review_now"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="TextContrastCheck" />


</LinearLayout>